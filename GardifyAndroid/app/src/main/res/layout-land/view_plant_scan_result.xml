<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView_recycler_view_plant_scan_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginPaddingSize_120sdp"
        android:layout_marginTop="@dimen/marginPaddingSize_5sdp"

        android:layout_marginEnd="@dimen/marginPaddingSize_120sdp"
        app:cardCornerRadius="@dimen/cardCornerRadius_medium"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView_view_plant_scan_result"
                android:layout_width="@dimen/imageView_all_width_200sdp"
                android:layout_height="@dimen/imageView_all_height_200sdp"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_10sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:scaleType="centerCrop"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_latin"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_body_medium"
                android:textStyle="italic"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView_view_plant_scan_result" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_plant_family_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:textColor="@color/text_plantScan_resultNames"
                android:textSize="@dimen/textSize_body_medium"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_view_plant_scan_result_plant_family_name_label"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_latin" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_plant_family_name_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:textSize="@dimen/textSize_body_medium"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_latin" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_plant_german_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:textColor="@color/text_all_black"
                android:textSize="@dimen/textSize_body_medium"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_plant_common_name" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_plant_common_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:textSize="@dimen/textSize_body_medium"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_plant_family_name" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_synonym"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:textColor="@color/text_plantScan_resultNames"
                android:textSize="@dimen/textSize_body_medium"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/textView_view_plant_scan_result_synonym_label"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_plant_german_name" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_synonym_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:textSize="@dimen/textSize_body_medium"
                android:visibility="gone"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_plant_german_name" />

            <TextView
                android:id="@+id/textView_view_plant_scan_result_information"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:maxLines="5"
                android:textSize="@dimen/textSize_body_medium"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_synonym" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                android:orientation="horizontal"
                android:weightSum="2"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_view_plant_scan_result_information">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_view_plant_scan_result_more_information"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginRight="@dimen/marginPaddingSize_2sdp"
                    android:layout_weight="1"
                    android:text="@string/all_moreDetails"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:visibility="gone"
                    app:cornerRadius="@dimen/cardCornerRadius_small" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_view_plant_scan_result_save_into_my_garden"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/marginPaddingSize_2sdp"
                    android:layout_weight="1"
                    android:text="@string/all_storeInMyGarden"
                    android:textAllCaps="false"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:visibility="gone"
                    app:cornerRadius="@dimen/cardCornerRadius_small" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>