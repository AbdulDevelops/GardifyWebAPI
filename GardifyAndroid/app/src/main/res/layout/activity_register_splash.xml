<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gardify_splash_register_background"
    tools:context=".ui.RegisterSplashActivity"
    app:theme="@style/Theme.MaterialComponents">


    <ImageView
        android:id="@+id/imageView_splashScreen_cross"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/gardify_app_icon_schliessen_weiss"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="@dimen/imageView_all_marginTop_8sdp"
        android:layout_marginEnd="@dimen/imageView_all_marginEnd_8sdp"
        android:scaleX=".6"
        android:scaleY=".6"
        android:clickable="true"
        android:focusable="true" />

    <TextView
        android:id="@+id/textView_splashScreen_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/marginPaddingSize_16sdp"
        android:layout_marginBottom="@dimen/_48sdp"
        android:fontFamily="@font/source_sans_pro"
        android:text="@string/splashScreen_notYetRegistered"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_big"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/textView_splashScreen_fundamental_hint"/>

    <TextView
        android:id="@+id/textView_splashScreen_fundamental_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginStart="@dimen/marginPaddingSize_16sdp"
        android:text="@string/splashScreen_fundamentalFunctions"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_body_medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView_checkmark_savePlants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX=".6"
        android:scaleY=".6"
        android:layout_marginStart="@dimen/marginPaddingSize_16sdp"
        app:layout_constraintBottom_toBottomOf="@id/textView_splashScreen_savePlants"
        app:layout_constraintTop_toTopOf="@id/textView_splashScreen_savePlants"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gardify_app_icon_webshop" />

    <ImageView
        android:id="@+id/imageView_checkmark_todos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX=".6"
        android:scaleY=".6"
        android:layout_marginStart="@dimen/marginPaddingSize_16sdp"
        app:layout_constraintBottom_toBottomOf="@id/textView_splashScreen_Todos"
        app:layout_constraintTop_toTopOf="@id/textView_splashScreen_Todos"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gardify_app_icon_webshop"/>

    <ImageView
        android:id="@+id/imageView_checkmark_frost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleX=".6"
        android:scaleY=".6"
        android:layout_marginStart="@dimen/marginPaddingSize_16sdp"
        app:layout_constraintBottom_toBottomOf="@id/textView_splashScreen_frost"
        app:layout_constraintTop_toTopOf="@id/textView_splashScreen_frost"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/gardify_app_icon_webshop"/>

    <TextView
        android:id="@+id/textView_splashScreen_savePlants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginTop="@dimen/marginPaddingSize_16sdp"
        android:text="@string/splashScreen_savePlants"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_body_medium"
        android:layout_marginStart="@dimen/marginPaddingSize_5sdp"
        app:layout_constraintStart_toEndOf="@id/imageView_checkmark_savePlants"
        app:layout_constraintTop_toBottomOf="@id/textView_splashScreen_fundamental_hint" />

    <TextView
        android:id="@+id/textView_splashScreen_Todos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
        android:layout_marginStart="@dimen/marginPaddingSize_5sdp"
        android:text="@string/splashScreen_todos"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_body_medium"
        app:layout_constraintStart_toEndOf="@id/imageView_checkmark_savePlants"
        app:layout_constraintTop_toBottomOf="@id/textView_splashScreen_savePlants"/>

    <TextView
        android:id="@+id/textView_splashScreen_frost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
        android:layout_marginStart="@dimen/marginPaddingSize_5sdp"
        android:text="@string/splashScreen_frost"
        android:textColor="@android:color/white"
        android:textSize="@dimen/textSize_body_medium"
        app:layout_constraintStart_toEndOf="@id/imageView_checkmark_frost"
        app:layout_constraintTop_toBottomOf="@id/textView_splashScreen_Todos"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_splashScreen_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SecondaryButtonSmallNoPadding"
        android:paddingStart="@dimen/marginPaddingSize_8sdp"
        android:paddingEnd="@dimen/marginPaddingSize_8sdp"
        android:text="@string/splashScreen_registerButton"
        android:layout_marginTop="@dimen/marginPaddingSize_32sdp"
        app:layout_constraintTop_toBottomOf="@id/textView_splashScreen_frost"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_splashScreen_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/SecondaryButtonSmallNoPadding"
        android:paddingStart="@dimen/marginPaddingSize_8sdp"
        android:paddingEnd="@dimen/marginPaddingSize_8sdp"
        android:layout_marginTop="@dimen/_16sdp"
        app:layout_constraintTop_toBottomOf="@id/button_splashScreen_register"
        app:layout_constraintStart_toStartOf="@id/button_splashScreen_register"
        app:layout_constraintEnd_toEndOf="@id/button_splashScreen_register"
        android:text="@string/splashScreen_loginButton"/>
</androidx.constraintlayout.widget.ConstraintLayout>