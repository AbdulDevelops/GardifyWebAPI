<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginPaddingSize_5sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView_filter_item_row_category_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:textSize="@dimen/textSize_body_medium"
            android:textStyle="bold" />

        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_filter_item_row_plant_search_filter"
            android:layout_width="@dimen/width_height_16sdp"
            android:layout_height="@dimen/width_height_16sdp"
            android:background="@drawable/checkbox_layout"
            android:button="@null"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>