<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/scrollView_all_seashell">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/marginPaddingSize_24sdp"
        android:background="@color/linearLayout_all_seashell">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            tools:context=".UI.Settings.SettingsFragment">

            <ProgressBar
                android:id="@+id/progressBar_settings"
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/cardView_all_white"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardView_settings_profileImage"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        app:cardCornerRadius="@dimen/_100sdp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">
                        <ImageView
                            android:id="@+id/imageView_settings_profileImage"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            app:srcCompat="@drawable/circle_add_icon" />
                    </androidx.cardview.widget.CardView>


                    <LinearLayout
                        android:id="@+id/linear_layout_settings_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="@+id/cardView_settings_profileImage"
                        app:layout_constraintStart_toEndOf="@+id/cardView_settings_profileImage"
                        app:layout_constraintTop_toTopOf="@+id/cardView_settings_profileImage">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="@string/settings_username"
                            android:textColor="@color/text_all_black"
                            android:textSize="@dimen/textSize_body_medium"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/editTextView_settings_username"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="16dp"
                            android:text="--"
                            android:textColor="@color/text_all_black"
                            android:textSize="@dimen/textSize_body_medium" />

                    </LinearLayout>

                    <View
                        android:id="@+id/view"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="20dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/view_all_divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/cardView_settings_profileImage" />

                    <TextView
                        android:id="@+id/textView3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/all_email"
                        android:textStyle="bold"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintEnd_toStartOf="@+id/textView_settings_email"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view" />

                    <TextView
                        android:id="@+id/textView_settings_email"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="&#8230;"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintBottom_toBottomOf="@+id/editTextView_settings_email"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView3" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/view_all_divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTextView_settings_email" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/all_password"
                        android:textStyle="bold"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintEnd_toStartOf="@+id/textView_settings_password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view3" />

                    <TextView
                        android:id="@+id/textView_settings_password"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="&#8230;"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintBottom_toBottomOf="@+id/editTextView_settings_password"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView5" />

                    <View
                        android:id="@+id/view4"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/view_all_divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTextView_settings_password" />

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="Gartenstandort"
                        android:textStyle="bold"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintEnd_toStartOf="@+id/textView_settings_localization"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view4" />

                    <TextView
                        android:id="@+id/textView_settings_localization"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        android:gravity="center"
                        android:text="&#8230;"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintBottom_toBottomOf="@+id/editTextView_settings_address"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView9" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@color/view_all_divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/editTextView_settings_address" />

                    <TextView
                        android:id="@+id/textView_settings_userdata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:text="Nutzerdaten"
                        android:textStyle="bold"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/textView_settings_userData"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/view5" />

                    <TextView
                        android:id="@+id/textView_settings_userData"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="&#8230;"
                        android:gravity="center"
                        android:textColor="@color/text_all_black"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_settings_userdata"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView_settings_userdata" />

                    <EditText
                        android:id="@+id/editTextView_settings_email"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:ems="10"
                        android:background="@null"
                        android:inputType="textEmailAddress"
                        app:layout_constraintEnd_toStartOf="@+id/textView_settings_email"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView3" />

                    <EditText
                        android:id="@+id/editTextView_settings_password"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:ems="10"
                        android:enabled="false"
                        android:inputType="none"
                        android:text="*********"
                        android:background="@null"
                        app:layout_constraintEnd_toStartOf="@+id/textView_settings_password"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView5" />

                    <EditText
                        android:id="@+id/editTextView_settings_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:ems="10"
                        android:background="@null"
                        android:inputType="textPersonName"
                        app:layout_constraintEnd_toStartOf="@+id/textView_settings_localization"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView9" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView2">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/textView_settings_frost_warning_puffer_counter"
                        android:layout_width="40dp"
                        android:layout_height="0dp"
                        android:text="0"
                        android:textAlignment="center"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintTop_toTopOf="@id/textView_settings_frost_warning_buffer"
                        app:layout_constraintBottom_toBottomOf="@id/textView_settings_frost_warning_buffer"
                        app:layout_constraintStart_toEndOf="@id/textView_settings_frost_warning_buffer"/>

                    <TextView
                        android:id="@+id/textView_settings_frost_warning_buffer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/settings_frostWarningBuffer"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_settings_frost_warning1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView3" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/checkBox_settings_frost_warning"
                        app:layout_constraintEnd_toStartOf="@+id/switch_settings_frost_warning1"
                        app:layout_constraintTop_toTopOf="@+id/checkBox_settings_frost_warning"
                        app:srcCompat="@android:drawable/ic_dialog_email" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkBox_settings_frost_warning"
                        android:layout_width="@dimen/imageView_all_width_18sdp"
                        android:layout_height="@dimen/width_height_18sdp"
                        android:background="@drawable/checkbox_layout"
                        android:button="@null"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_settings_frost_warning"
                        app:layout_constraintEnd_toStartOf="@+id/imageView3"
                        app:layout_constraintTop_toTopOf="@+id/textView_settings_frost_warning" />

                    <TextView
                        android:id="@+id/textView_settings_frost_warning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/all_frostWarning"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintEnd_toStartOf="@+id/checkBox_settings_frost_warning"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_settings_frost_warning_buffer" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_settings_storm_warning1"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView4" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="@+id/checkBox_settings_storm_warning"
                        app:layout_constraintEnd_toStartOf="@+id/switch_settings_storm_warning1"
                        app:layout_constraintTop_toTopOf="@+id/checkBox_settings_storm_warning"
                        app:srcCompat="@android:drawable/ic_dialog_email" />

                    <com.google.android.material.checkbox.MaterialCheckBox
                        android:id="@+id/checkBox_settings_storm_warning"
                        android:layout_width="@dimen/imageView_all_width_18sdp"
                        android:layout_height="@dimen/width_height_18sdp"
                        android:background="@drawable/checkbox_layout"
                        android:button="@null"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_settings_storm_warning"
                        app:layout_constraintEnd_toStartOf="@+id/imageView4"
                        app:layout_constraintTop_toTopOf="@+id/textView_settings_storm_warning" />

                    <TextView
                        android:id="@+id/textView_settings_storm_warning"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/all_stormWarning"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintEnd_toStartOf="@+id/checkBox_settings_storm_warning"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_settings_frost_warning" />

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switch_settings_newsletter"
                        android:layout_width="wrap_content"
                        android:layout_height="0dp"
                        android:layout_marginEnd="12dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView18"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textView18" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="Newsletter bestellen"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/switch_settings_newsletter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/textView_settings_storm_warning" />

                    <ImageView
                        android:id="@+id/imageView_settings_frost_warning_puffer_minus"
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="4dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textView_settings_frost_warning_puffer_counter"
                        app:layout_constraintEnd_toStartOf="@+id/imageView_settings_frost_warning_puffer_plus"
                        app:layout_constraintTop_toTopOf="@+id/textView_settings_frost_warning_puffer_counter"
                        app:layout_constraintVertical_bias="0.0"
                        app:srcCompat="@drawable/einstellungen_minus" />

                    <ImageView
                        android:id="@+id/imageView_settings_frost_warning_puffer_plus"
                        android:layout_width="20dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toBottomOf="@+id/imageView_settings_frost_warning_puffer_minus"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/imageView_settings_frost_warning_puffer_minus"
                        app:srcCompat="@drawable/einstellungen_plus" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView3">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/text_view_settings_imprint"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/menuActivityMainDrawerFooter_imprint"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintEnd_toStartOf="@+id/imageView_settings_impressum"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_settings_contact" />

                    <TextView
                        android:id="@+id/text_view_settings_contact"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/menuActivityMainDrawerFooter_contact"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintEnd_toStartOf="@+id/imageView_settings_contact"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/imageView_settings_contact"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_settings_contact"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_view_settings_contact"
                        app:srcCompat="@drawable/gardify_app_icon_pfeil_nach_rechts" />

                    <ImageView
                        android:id="@+id/imageView_settings_impressum"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_settings_imprint"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_view_settings_imprint"
                        app:srcCompat="@drawable/gardify_app_icon_pfeil_nach_rechts" />

                    <ImageView
                        android:id="@+id/imageView_settings_privacy"
                        android:layout_width="50dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="2dp"
                        app:layout_constraintBottom_toBottomOf="@+id/textview_settings_privacy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/textview_settings_privacy"
                        app:srcCompat="@drawable/gardify_app_icon_pfeil_nach_rechts" />

                    <TextView
                        android:id="@+id/textview_settings_privacy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        android:text="@string/menuActivityMainDrawerFooter_privacy"
                        android:textSize="@dimen/textSize_body_medium"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/imageView_settings_privacy"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_view_settings_imprint" />
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_settings_delete"
                style="@style/PrimaryWarningButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/settings_deleteAccount"
                android:letterSpacing=".025"
                android:textColor="@color/text_all_white"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView4" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</ScrollView>