<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/constraintLayout_all_white"
    android:layout_margin="@dimen/marginPaddingSize_24sdp"
    tools:context=".ui.suggestPlants.SuggestPlantsFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/suggestPlant_headerText"
                android:textAlignment="textStart"
                android:textSize="@dimen/textSize_body_small"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView_suggest_plant_camera" />


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_height="match_parent">

                <ProgressBar
                    android:id="@+id/progressbar_suggestPlants"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_suggest_plant_camera"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/cardView_all_suggestPlant"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.485">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_suggest_plant_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imageView_all_height_cameraGallery"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/gardify_app_icon_camera" />

                        <TextView
                            android:id="@+id/textView_suggest_plant_camera"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/all_camera"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/textSize_headline"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardView_suggest_plant_album"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:cardCornerRadius="10dp"
                    android:backgroundTint="@color/cardView_suggestPlant_photo"
                    app:layout_constraintDimensionRatio="1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintWidth_percent="0.485">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:id="@+id/imageView_suggest_plant_album"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/imageView_all_height_cameraGallery"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"
                            android:src="@drawable/gardify_app_icon_album" />

                        <TextView
                            android:id="@+id/textView_suggest_plant_album"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:text="@string/all_photo"
                            android:textAlignment="center"
                            android:textAllCaps="true"
                            android:textColor="@android:color/white"
                            android:textSize="@dimen/textSize_headline"
                            android:textStyle="bold" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview_suggest_plant_recycle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName_suggest_plant_name">

                    <GridView
                        android:id="@+id/gridView_suggest_plant"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:numColumns="3" />
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:id="@+id/textView_suggest_plant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/suggestPlant_plant_name"
                    android:textAlignment="textStart"
                    android:textColor="@color/text_all_black"
                    android:textSize="@dimen/textSize_body_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView_suggest_plant_camera" />

                <EditText
                    android:id="@+id/editTextTextPersonName_suggest_plant_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/custom_borders"
                    android:ems="10"
                    android:layout_marginTop="@dimen/marginPaddingSize_16sdp"
                    android:gravity="top"
                    android:hint="@string/suggestPlant_input_plant_name_hint"
                    android:inputType="textMultiLine|text"
                    android:maxLines="5"
                    android:minLines="5"
                    android:overScrollMode="always"
                    android:paddingLeft="10dp"
                    android:scrollbarStyle="insideInset"
                    android:scrollbars="vertical"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_suggest_plant" />


                <TextView
                    android:id="@+id/textView_suggest_plant_copyright"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="@dimen/_13ssp"
                    android:paddingTop="@dimen/marginPaddingSize_3sdp"
                    android:paddingBottom="@dimen/marginPaddingSize_3sdp"
                    android:clickable="true"
                    android:textColorLink="@color/text_suggestPlant_copyright"
                    app:layout_constraintTop_toBottomOf="@id/editTextTextPersonName_suggest_plant_name"
                    app:layout_constraintStart_toStartOf="parent"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/button_suggest_plant"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="@string/all_send"
                    style="@style/PrimaryButtonStyle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView_suggest_plant_copyright" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>