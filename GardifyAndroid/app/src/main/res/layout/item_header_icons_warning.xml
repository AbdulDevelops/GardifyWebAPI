<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_view_reset_warning"
            android:layout_width="0dp"
            android:layout_height="@dimen/height_32sdp"
            android:layout_gravity="center_vertical"
            android:backgroundTint="@color/cardView_all_white"
            android:elevation="@dimen/elevation_2dp"
            android:layout_weight="2"
            android:layout_marginEnd="@dimen/marginPaddingSize_5sdp"
            app:cardCornerRadius="@dimen/cardCornerRadius_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:layout_gravity="start"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_reset_warning_info"
                    android:layout_width="@dimen/imageView_all_width_18sdp"
                    android:layout_height="@dimen/imageView_all_height_18sdp"
                    android:layout_marginStart="@dimen/marginPaddingSize_10sdp"
                    android:layout_marginEnd="@dimen/marginPaddingSize_10sdp"
                    android:src="@drawable/ic_info"
                    app:tint="@color/colorPrimary" />
                <TextView
                    android:id="@+id/text_view_reset_warnings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/all_resetWarnings"
                    android:layout_marginRight="5dp"
                    android:textSize="@dimen/textSize_body_xxsmall" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_one"
                android:layout_width="@dimen/imageView_all_width_18sdp"
                android:layout_height="@dimen/imageView_all_height_18sdp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/marginPaddingSize_10sdp"
                android:src="@mipmap/ic_launcher"
                android:tintMode="@color/imageView_all_dawn" />

            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/width_height_18sdp"
                android:layout_gravity="center_vertical" />

            <ImageView
                android:id="@+id/image_two"
                android:layout_width="@dimen/imageView_all_width_18sdp"
                android:layout_height="@dimen/imageView_all_height_18sdp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/marginPaddingSize_10sdp"
                android:backgroundTint="@color/imageView_all_dawn"
                android:src="@mipmap/ic_launcher" />
        </LinearLayout>
    </LinearLayout>
</layout>
