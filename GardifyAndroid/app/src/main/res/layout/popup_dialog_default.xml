<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/linearLayout_all_white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/marginPaddingSize_16sdp">

    <TextView
        android:id="@+id/text_view_default_popup_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="popup header"
        android:textAlignment="center"
        android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
        android:textSize="@dimen/textSize_body_medium"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_popup_dialog_close"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="2"
        android:text="@string/all_close"
        android:textAllCaps="false"
        android:textSize="@dimen/textSize_body_medium"
        android:textStyle="normal"
        app:cornerRadius="@dimen/cardCornerRadius_small" />

</LinearLayout>