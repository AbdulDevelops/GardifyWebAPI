<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/linearLayout_all_white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/marginPaddingSize_16sdp">

    <TextView
        android:id="@+id/button_popup_dialog_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="popup header"
        android:textColor="@color/text_all_gunmetal"
        android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
        android:textSize="@dimen/textSize_headline"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/button_popup_dialog_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="popup description"
        android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
        android:textSize="@dimen/textSize_body_xsmall"
        android:textStyle="bold" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_popup_dialog_green"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_weight="2"
        android:text="Positive"
        android:textAllCaps="false"
        android:textSize="@dimen/textSize_body_medium"
        android:textStyle="normal"
        app:cornerRadius="@dimen/cardCornerRadius_small" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_popup_dialog_red"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="Negative"
        android:backgroundTint="@color/button_all_negative"
        android:textAllCaps="false"
        android:textSize="@dimen/textSize_body_medium"
        android:textStyle="normal"
        app:cornerRadius="@dimen/cardCornerRadius_small" />

</LinearLayout>