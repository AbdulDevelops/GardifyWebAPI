<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/marginPaddingSize_2sdp"
        android:paddingStart="@dimen/marginPaddingSize_10sdp"
        android:paddingEnd="@dimen/marginPaddingSize_10sdp"
        android:paddingBottom="@dimen/marginPaddingSize_3sdp"
        android:orientation="horizontal">

            <TextView
                android:id="@+id/text"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textSize="@dimen/textSize_body_medium" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/add_icon"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/imageView_all_height_18sdp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/ripple_circular"
                android:src="@drawable/circle_add_icon" />

        </LinearLayout>
</layout>
