<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
        app:cardCornerRadius="@dimen/cardCornerRadius_medium"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/marginPaddingSize_16sdp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/image_view_garden_knowledge"
                    android:layout_width="0dp"
                    android:layout_height="@dimen/imageView_all_height_200sdp"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerCrop"
                    android:src="@drawable/gardify_app_icon_schmetterlingsfreundlich"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/text_view_garden_knowledge_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/marginPaddingSize_10sdp"
                    android:textStyle="bold"
                    android:textColor="@color/text_all_gunmetal"
                    android:fontFamily="@font/source_sans_pro"
                    android:text="@string/plantSearch_flowersAvailableIn"
                    app:layout_constraintTop_toBottomOf="@id/image_view_garden_knowledge"
                    android:textSize="@dimen/textSize_title"/>

                <TextView
                    android:id="@+id/text_view_garden_knowledge_description"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:maxLines="3"
                    android:text="--"
                    android:textSize="@dimen/textSize_body_medium"
                    android:fontFamily="@font/source_sans_pro"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@id/image_button_garden_knowledge_expand_icon"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/text_view_garden_knowledge_title" />

                <ImageView
                    android:id="@+id/image_button_garden_knowledge_expand_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:srcCompat="@drawable/expand" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>
