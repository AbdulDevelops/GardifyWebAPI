<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="@dimen/width_210sdp"
        android:layout_height="@dimen/_260sdp"
        android:layout_marginTop="@dimen/marginPaddingSize_10sdp"
        android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
        app:cardCornerRadius="@dimen/cardCornerRadius_medium"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="@dimen/marginPaddingSize_10sdp">

            <LinearLayout
                android:id="@+id/linear_layout_my_garden_eco_carousel_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/image_view_eco_icon"
                    android:layout_width="wrap_content"
                    android:layout_marginEnd="@dimen/imageView_all_marginEnd_5sdp"
                    android:layout_height="@dimen/imageView_all_height_18sdp"
                    android:layout_gravity="center_vertical" />

                <TextView
                    android:id="@+id/textView_my_garden_eco_element_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="--"
                    android:fontFamily="@font/source_sans_pro"
                    android:textSize="@dimen/textSize_body_medium"
                    android:textStyle="bold" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/switch_my_garden_eco_element"
                    android:layout_width="wrap_content"
                    android:layout_gravity="center_vertical"
                    style="@style/CustomSwitchStyle"/>
            </LinearLayout>

            <TextView
                android:id="@+id/textView_my_garden_eco_element_desc"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:text="--"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/button_my_garden_eco_more_detail"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_my_garden_eco_carousel_title"
                android:fontFamily="@font/source_sans_pro"
                android:textSize="@dimen/textSize_body_medium" />

            <ImageView
                android:id="@+id/button_my_garden_eco_more_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/imageView_myGarden_marginStart_3sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:backgroundTint="@color/imageView_all_dawn"
                android:padding="@dimen/imageView_all_padding_5sdp"
                android:src="@drawable/expand_right"
                android:textColor="@android:color/white" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>