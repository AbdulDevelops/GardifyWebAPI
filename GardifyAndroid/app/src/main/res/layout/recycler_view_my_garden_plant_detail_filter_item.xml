<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/linearLayout_all_whiteSmoke"
        android:orientation="vertical"
        android:padding="@dimen/marginPaddingSize_5sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view_plant_filter_icon"
                android:layout_width="@dimen/imageView_all_width_18sdp"
                android:layout_height="@dimen/imageView_all_height_18sdp"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/imageView_all_marginLeft_5sdp"
                android:src="@drawable/gardify_app_icon_schmetterlingsfreundlich"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_my_garden_plant_filter_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_weight="1"
                android:singleLine="true"
                android:ellipsize="marquee"
                android:fontFamily="@font/source_sans_pro"
                android:marqueeRepeatLimit="marquee_forever"
                android:scrollHorizontally="true"
                android:text="--"
                android:textSize="@dimen/textSize_body_medium" />

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/plant_detail_filter_checkbox"
                android:layout_width="@dimen/width_height_18sdp"
                android:layout_height="@dimen/width_height_18sdp"
                android:background="@drawable/checkbox_layout"
                android:button="@null" />
        </LinearLayout>
    </LinearLayout>
</layout>
