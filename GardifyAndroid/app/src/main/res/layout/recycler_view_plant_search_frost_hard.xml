<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
        app:cardCornerRadius="@dimen/cardCornerRadius_medium"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginPaddingSize_10sdp">

            <LinearLayout
                android:id="@+id/linear_layout_frost_temperature_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:layout_marginBottom="@dimen/marginPaddingSize_5sdp"
                    android:text="@string/plantSearch_excludeTemperatureSensitivePlants"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:textStyle="bold" />

            </LinearLayout>
            <!-- temperature seekbar -->
            <LinearLayout
                android:id="@+id/linear_layout_frost_temperature_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_frost_temperature_header"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 10 °C"
                    android:gravity="left"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" 0 °C"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" -10 °C"
                    android:gravity="center"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:text=" -20 °C"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:text=" -30 °C"
                    android:gravity="center"
                    android:layout_weight="1"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" -40 °C"
                    android:textSize="@dimen/textSize_body_xsmall"
                    android:gravity="center"
                    android:layout_weight="1"/>

            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_bar_frost_hard_temperature"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/custom_seekbar_frost_hard"
                android:max="11"
                android:splitTrack="false"
                android:maxHeight="@dimen/height_20dp"
                android:paddingStart="@dimen/marginPaddingSize_5sdp"
                android:paddingEnd="@dimen/marginPaddingSize_5sdp"
                android:progress="0"
                app:layout_constraintTop_toBottomOf="@id/linear_layout_frost_temperature_labels"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:thumb="@drawable/seekbar_frost_hard_thumb"/>

            <!-- zone seekbar -->
            <LinearLayout
                android:id="@+id/linear_layout_frost_zone_labels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/marginPaddingSize_24sdp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:text="Z11"
                    android:textSize="@dimen/textSize_body_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z10"
                    android:textSize="@dimen/textSize_body_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z9"
                    android:textSize="@dimen/textSize_body_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z8"
                    android:textSize="@dimen/textSize_body_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z7" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z6"
                    android:textSize="@dimen/textSize_body_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z5"
                    android:textSize="@dimen/textSize_body_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z4" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z3"
                    android:textSize="@dimen/textSize_body_xsmall" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="Z2"
                    android:textSize="@dimen/textSize_body_xsmall" />
            </LinearLayout>

            <SeekBar
                android:id="@+id/seek_bar_frost_hard_zone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/custom_seekbar_frost_hard"
                android:max="11"
                android:splitTrack="false"
                android:maxHeight="@dimen/height_20dp"
                android:paddingStart="@dimen/marginPaddingSize_5sdp"
                android:paddingEnd="@dimen/marginPaddingSize_5sdp"
                android:progress="0"
                app:layout_constraintTop_toBottomOf="@id/seek_bar_frost_hard_temperature"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:thumb="@drawable/seekbar_frost_hard_thumb" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:maxLines="1"
                android:text="@string/plantSearch_classificationAccordingToWinterHardnessZones"
                android:textSize="@dimen/textSize_body_xsmall"
                app:layout_constraintTop_toBottomOf="@id/seek_bar_frost_hard_zone"
                app:layout_constraintStart_toStartOf="parent"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/image_view_seekbar_arrow"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_90sdp"
                android:layout_marginStart="@dimen/_4sdp"
                android:layout_marginTop="@dimen/_14sdp"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                app:layout_constraintBottom_toBottomOf="@id/seek_bar_frost_hard_zone"
                app:layout_constraintStart_toStartOf="@id/seek_bar_frost_hard_zone"
                app:layout_constraintTop_toTopOf="@id/seek_bar_frost_hard_temperature"
                app:srcCompat="@drawable/seekbar_drawable_frost_arrow" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>
