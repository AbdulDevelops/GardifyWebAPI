<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:id="@+id/card_view_plant"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/marginPaddingSize_10sdp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:textColor="@color/text_all_gunmetal"
            android:text="@string/plantSearch_searchResults"
            android:textSize="@dimen/textSize_title"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_weight="1.4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/button_pagination_first"
                android:layout_width="@dimen/width_40dp"
                android:layout_height="wrap_content"
                android:text="&lt;&lt;"
                android:textAlignment="center"
                android:background="@drawable/transparent_button"
                android:textSize="@dimen/textSize_body_medium"
                android:textColor="@color/text_all_gunmetal" />

            <TextView
                android:id="@+id/button_pagination_previous"
                android:layout_width="@dimen/width_40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_body_medium"
                android:background="@drawable/transparent_button"
                android:text="&lt;"
                android:textColor="@color/text_all_gunmetal" />

            <TextView
                android:id="@+id/text_view_pagination_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:text="-"
                android:textSize="@dimen/textSize_body_medium" />

            <TextView
                android:id="@+id/button_pagination_next"
                android:layout_width="@dimen/width_40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_body_medium"
                android:background="@drawable/transparent_button"
                android:text=">"
                android:textColor="@color/text_all_gunmetal" />

            <TextView
                android:id="@+id/button_pagination_last"
                android:layout_width="@dimen/width_40dp"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_body_medium"
                android:background="@drawable/transparent_button"
                android:text=">>"
                android:textColor="@color/text_all_gunmetal" />
        </LinearLayout>
    </LinearLayout>

</layout>
