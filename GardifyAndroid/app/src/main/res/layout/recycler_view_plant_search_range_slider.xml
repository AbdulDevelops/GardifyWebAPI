<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <import type="android.view.View" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/linearLayout_all_whiteSmoke"
        android:orientation="vertical"
        android:padding="@dimen/marginPaddingSize_5sdp">

        <LinearLayout
            android:id="@+id/linearLayout_recyclerViewPlantSearchRangeSlider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView_recyclerViewPlantSearchRangeSlider_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_body_medium"/>

            <TextView
                android:id="@+id/textView_recyclerViewPlantSearchRangeSlider_unit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="cm"
                android:textAlignment="center"
                android:textColor="@color/text_all_jasper"
                android:textSize="@dimen/textSize_body_medium"/>

        </LinearLayout>

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/range_slider_month"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />

        <com.google.android.material.slider.RangeSlider
            android:id="@+id/range_slider_height"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>
</layout>
