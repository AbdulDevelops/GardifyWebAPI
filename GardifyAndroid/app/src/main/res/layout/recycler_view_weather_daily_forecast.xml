<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.view.View" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/cardCornerRadius_medium"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/marginPaddingSize_5sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_view_weather_daily_forecast_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Day"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_body_medium" />

            <TextView
                android:id="@+id/text_view_weather_daily_forecast_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Date"
                android:textAlignment="center"
                android:textSize="@dimen/textSize_body_medium" />

            <TextView
                android:id="@+id/text_view_weather_daily_forecast_max"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:text="Max Temp"
                android:textAlignment="center"
                android:textColor="@color/text_gardenWeather_forecastMax"
                android:textSize="@dimen/textSize_body_medium"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold" />

            <View
                android:id="@+id/divider_weather"
                android:layout_width="@dimen/width_90sdp"
                android:layout_height="1dp"
                android:layout_marginTop="@dimen/marginPaddingSize_5sdp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/text_view_weather_daily_forecast_min"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Max Temp"
                android:textAlignment="center"
                android:textColor="@color/text_gardenWeather_forcastMin"
                android:textSize="@dimen/textSize_body_medium"
                android:fontFamily="@font/source_sans_pro"
                android:textStyle="bold" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</layout>