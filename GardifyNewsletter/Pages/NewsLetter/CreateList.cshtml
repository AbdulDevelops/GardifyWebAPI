@page
@model GardifyNewsletter.Areas.Intern.Pages.Distributors.CreateListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Create";
    Layout = "~/Pages/Shared/_LayoutIntern.cshtml";
}
<p class="text-secondary mt-4 mb-4">Interner Bereich: Newsletter Abonnenten</p>

<h3 class="mt-3">Hinzufügen</h3>
<p class="mt-2 mb-4">
    <a class="text-dark" asp-page="IndexList">Übersicht Abonnentengruppen</a>
    <span> | </span>
    <a class="text-dark" asp-page="Subscribers">Abonnenten nach Gruppe</a>
    <span> | </span>
    <a class="text-dark" asp-page="CreateList">Neue Gruppe</a>
    <span> | </span>
    <a class="text-dark" asp-page="Import">Import</a>
</p>
<br />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">
                    Name der Verteilerliste
                </label>
                <input asp-for="NewsletterDistributionLists.NewsletterDistributionListName" class="form-control" />
                <span asp-validation-for="NewsletterDistributionLists.NewsletterDistributionListName" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="checkbox" data-val="true" data-val-required="The IsChecked field is required." id="IsChecked" name="IsChecked" value="true">
                <input name="IsChecked" type="hidden" value="false">
                <label class="form-check-label mr-2"> öffentlich wählbar</label>
            </div>
            <div class="form-group">
                <input type="submit" value="Verteiler Hinzufügen" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="IndexList">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
