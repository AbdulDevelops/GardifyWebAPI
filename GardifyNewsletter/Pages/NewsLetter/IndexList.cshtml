@page
@model GardifyNewsletter.Areas.Intern.Pages.Distributors.IndexListModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutIntern.cshtml";
}
<p class="text-secondary mt-4 mb-4">Interner Bereich: Newsletter Abonnenten</p>

<h3 class="mt-3">Übersicht</h3>
<p class="mt-2 mb-4">
    <a class="text-dark" asp-page="IndexList">Übersicht Abonnentengruppen</a>
    <span> | </span>
    <a class="text-dark" asp-page="Subscribers">Abonnenten nach Gruppe</a>
    <span> | </span>
    <a class="text-dark" asp-page="CreateList">Neue Gruppe</a>
    <span> | </span>
    <a class="text-dark" asp-page="Import">Import</a>
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Verteiler
            </th>
            <th>
                Abonnenten
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NewsletterDistributionLists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsletterDistributionListId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NewsletterDistributionListName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Recipients.Count)
                </td>
            </tr>
        }
    </tbody>
</table>
