@page
@model GardifyNewsletter.Areas.Intern.Pages.Distributors.SubscriberModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_LayoutIntern.cshtml";
}
<p class="text-secondary mt-4 mb-4">Interner Bereich: Newsletter Abonnenten</p>

<h3 class="mt-3">Abonnenten nach Gruppe</h3>
<p class="mt-2 mb-4">

    <a class="text-dark" asp-page="Subscribers">Abonnenten</a>
    <span> | </span>
    <a class="text-dark" asp-page="Import">Import</a>
</p>
<br />
<form asp-page="./Subscribers" method="get">
    <div class="form-actions no-color row mb-2">

        <div class="col-md-4">
            <label asp-for="SelectedSector">Liste:</label>
            <div class="form-group">
                <select asp-for="SelectedSector" name="SelectedSector" class="form-control">
                    <option value="sub" selected="selected">Nur Abonnenten</option>
                    <option value="non-sub">User ohne Abo</option>
                    <option value="all">Alles</option>

                </select>
                <span asp-validation-for="SelectedSector" class="text-danger"></span>
            </div>
            <input type="submit" value="Filtern" class="btn btn-sm btn-orange" />
        </div>
        <div class="col-md-4">
            <label for="SearchString">Suche:</label>
            <div class="form-group">
                <input type="text" class="form-control" name="SearchString" value="@Model.SearchString" />
            </div>
            <input type="submit" value="Suchen" class="btn btn-sm btn-orange mr-2" />

        </div>
        <div class="col-md-4 d-flex justify-content-end d-flex align-items-end">
            @{ var count = @Model.Count;
                <p class="float-right text-secondary"> @count Datensätze gesamt</p>
            }
        </div>
    </div>
    <br /> 
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                EMailadresse
            </th>
            <th>
                Registrierungsdatum
            </th>
            <th>
                Aktionen
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.NewsletterRecipientsLists)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate)
                </td>
                <td>
                    <a class="btn btn-sm btn-outline-primary" asp-page-handler="Delete" asp-route-id="@item.UserId" onclick="return confirm('Bist du sicher?')">Löschen</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{ await Html.RenderPartialAsync("_PaginationIntern", new GardifyNewsletter.ViewModel.PaginationViewModel
    {
        CurrentPage = Model.CurrentPage,
        TotalPages = Model.TotalPages,
        EnableNext = Model.EnableNext,
        SelectedSector = Model.SelectedSector,
        CurrentSort = Model.CurrentSort,
        SearchString = Model.SearchString,
        EnablePrevious = Model.EnablePrevious
    });}
