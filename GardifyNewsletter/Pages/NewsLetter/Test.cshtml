@page
@model GardifyNewsletter.Areas.Intern.Pages.Newsletter.TestModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers


@{
    ViewData["Title"] = "Newsletter Testen";
    Layout = "~/Pages/Shared/_LayoutIntern.cshtml";
}
<p class="text-secondary mt-4 mb-4">Interner Bereich: Newsletter</p>

<h3 class="mt-3">Newsletter Testen</h3>
<p class="mt-2 mb-4">
    <a class="text-dark" asp-page="Index">Newsletter Übersicht</a>
    <span> | </span>
    <a class="text-dark" asp-page="Create">Newsletter erstellen</a>
    <span> | </span>
    <a class="text-dark" asp-page="Test">Newsletter testen</a>
</p>
@if (ViewBag.SuccessMessage != null)
{
    <div class="alert alert-success">@ViewBag.SuccessMessage</div>
}
<br />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label>Newsletter:</label>
                <div class="form-group">
                    <select name="newsLetterId" asp-items="Model.NewsLetterList" class="form-control"></select>
                </div>
            </div>
            <div class="form-group">
                <label>Empfängeremail</label>
                <div class="form-group">
                    <input class="form-control" name="recipient" type="text" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Newsletter Testen" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Zurück zur Übersicht</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
