    <script type="text/javascript" src="~/js/tinymce_4.8.5/tinymce/js/tinymce/tinymce.min.js"></script>
    <script type="text/javascript">
        tinyMCE.init({
            oninit: "setPlainText",
            language: "de",
            mode: "specific_textareas",
            editor_selector: "myTextEditor",
            theme: "modern",
            plugins: "preview,autosave,paste,autolink,link,code,image,charactercount",
            width: "100%",
            height: "500",

            // Theme options - button# indicated the row# only
            theme_advanced_buttons1: "bold,italic,underline,|,forecolor,charmap,|,formatselect,|,cut,copy,paste,|,cut,copy,paste,|,bullist,numlist,|,undo,redo,|,link,unlink,anchor,image,|,code,preview,|,removeformat, ",
            theme_advanced_buttons2: "",
            theme_advanced_buttons3: "",
            theme_advanced_toolbar_location: "top",
            theme_advanced_toolbar_align: "left",
            theme_advanced_statusbar_location: "bottom",
            theme_advanced_resizing: true,
            invalid_elements: 'script'
        });

        function setPlainText() {
            var ed = tinyMCE.get('elm1');

            ed.pasteAsPlainText = true;

            //adding handlers crossbrowser
            if (tinymce.isOpera || /Firefox\/2/.test(navigator.userAgent)) {
                ed.onKeyDown.add(function (ed, e) {
                    if (((tinymce.isMac ? e.metaKey : e.ctrlKey) && e.keyCode == 86) || (e.shiftKey && e.keyCode == 45))
                        ed.pasteAsPlainText = true;
                });
            } else {
                ed.onPaste.addToTop(function (ed, e) {
                    ed.pasteAsPlainText = true;
                });
            }
        }
    </script>
