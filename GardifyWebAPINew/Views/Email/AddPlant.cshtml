<h3>Hallo,</h3>

<p>
    @Model.Name (@Model.Email) hat eine neue Pflanze hinzugefügt:
</p>
<p>

    @{
        if (Model.PlantName == "")
        {
            <span>Name: unbekannt</span><br />
        }
        else
        {
            <span>Name: @Model.PlantName</span><br />
        }
    }

    @{
        if (Model.LatinPlantName == "")
        {
            <span>Latin Name: unbekannt</span><br />
        }
        else
        {
            <span>Latin Name: @Model.LatinPlantName</span><br />
        }
    }
    @{
        if (Model.IsAuthor == "true")
        {
            <span>Urheber: Ja</span><br />
        }
        else
        {
            <span>Urheber: Nein</span><br />
        }
    }
</p>
@{
    if (Model.SearchResult != "")
    {
        <p>
            <span>Suchergebnis: </span><br />
            <span style="padding-left: 5px;">
                @Model.SearchResult
            </span>
        </p>
    }

}
