@model List<GardifyModels.Models.ArticleCategory>

@{
    ViewBag.Title = "Artikel Kategorien";
    Layout = "~/Views/Shared/_LayoutAdminArea.cshtml";
   
}

<h2>Artikel-Kategorien (@Model.Count gesamt)</h2>

<p>
    @Html.ActionLink("Neu erstellen", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Title
        </th>
        <th>
            Geschenkidee?
        </th>
        <th>
            Anzahl der Artikeln
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.Title)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.IsGiftIdea)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.ArticlesInthisCategory.ToList().Count)
    </td>
    <td>
        @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Löschen", "Delete", new { id = item.Id })
    </td>
</tr>
    }

</table>
