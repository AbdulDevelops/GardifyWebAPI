@model GardifyModels.Models.PlantTagCategory

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_LayoutAdminArea.cshtml";
}

<h2>Vorhandene Kategorie ändern</h2>
<div class="form-horizontal">
    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.AntiForgeryToken()
        @Html.HiddenFor(model => model.Id)

    <div class="form-group">
        @Html.Label("title", "Name", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
        </div>

        @Html.Label("title", "Color", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Color, new { htmlAttributes = new { @class = "form-control", @type = "color", @style = "width: 80px;" } })
            @Html.ValidationMessageFor(model => model.Color, "", new { @class = "text-danger" })
        </div>
    </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Speichern" class="btn btn-default" />
            </div>
        </div>
    }

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @if (Model.Count == 0)
                {
                    using (Html.BeginForm("category-delete", "AdminAreaPlantTag"))
                    {
                        @Html.AntiForgeryToken()
                        @Html.Hidden("id", Model.Id)
                        <input type="submit" value="Löschen" class="btn btn-default" />
}
                }
                else
                {
                    <div class="btn btn-default disabled">Löschen</div>
                    <br /><br />@:*Eine Kategorie, die Tags beinhaltet, darf nicht gelöscht werden
                }
            </div>
        </div>
</div>

<div>
    @Html.ActionLink("Zurück", "Index", new { categoryId = Model.Id })
</div>
