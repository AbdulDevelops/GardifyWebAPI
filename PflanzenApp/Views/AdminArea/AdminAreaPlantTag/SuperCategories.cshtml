@model List<GardifyModels.Models.PlantTagSuperCategory>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdminArea.cshtml";
}

<h2>Überkategorien</h2>
@Html.ActionLink("Neue Überkategorie erstellen", "supercategory-create")

<table class="table">
    <tr>
        <th>
            Name
        </th>
        <th>
            Synonym
        </th>
        <th></th>
    </tr>
    @if (Model != null && Model.Any())
    {
        foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameGerman)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Synonym)
                </td>
                <td>
                    @Html.ActionLink("Ändern", "supercategory-edit", new { id = item.Id })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td colspan="4">Keine Eigenschaften in dieser Kategorie</td>
        </tr>
    }
</table>
<hr />