@model IEnumerable<GardifyModels.Models._TodoCheckedTemplateViewModel>
@if (Model.Count() > 0)
{
    <hr />
    <h4 class="modal-title">Todos auswählen, die importiert werden sollen</h4>
}
@{int limit = 3;}
@for (int i = 0; i < Model.Take(limit).Count(); i++)
{
    <input type="hidden" name="Todos[@i].TemplateId" value="@Model.ElementAt(i).TemplateId" />
    <input type="hidden" name="Todos[@i].TemplateText" value="@Model.ElementAt(i).TemplateTitle" />
    <div class="form-group">
        <p class="control-label col-md-2">@Model.ElementAt(i).TemplateTitle</p>
        <div class="col-md-5">
            @Html.CheckBox("Todos[" + i + "].Checked", Model.ElementAt(i).Checked)
        </div>
    </div>
}