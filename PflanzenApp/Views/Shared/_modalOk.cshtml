<div id="modal" class="modal fade" tabindex="-1" role="dialog">
	<div class="modal-dialog modal-sm">
		<div class="modal-content">
			<div class="modal-header">
				&nbsp;<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
			</div>
			<div class="modal-body">
				<b>Pflanze wurde erfolgreich hinzugefügt</b>
			</div>
			<div class="modal-footer">
				<button type="button" class="btn btn-default" data-dismiss="modal">Schließen</button>
				@Html.ActionLink("Zum Garten", "Index", "Garden", null, new { @class = "btn btn-primary" })
			</div>
		</div>
	</div>

</div>
<script>
	$('#modal').modal('toggle');
</script>