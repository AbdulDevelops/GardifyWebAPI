@model GardifyModels.Models._modalStatusMessageViewModel
<div id="modal-wrapper">
	@if (Model != null && Model.Messages.Count > 0)
	{
		string cssClass = "";

		switch (Model.Status)
		{
			case GardifyModels.Models.ModelEnums.ActionStatus.Success:
				cssClass = "alert-success";
				break;
			case GardifyModels.Models.ModelEnums.ActionStatus.Warning:
				cssClass = "alert-warning";
				break;
			case GardifyModels.Models.ModelEnums.ActionStatus.Error:
				cssClass = "alert-danger";
				break;
		}

		<div id="modal" class="modal fade" tabindex="-1" role="dialog">
			<div class="modal-dialog modal-sm">
				<div class="modal-content">
					<div class="@cssClass modal-header">
						&nbsp;<button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
					</div>
					<div class=" modal-body">
						@if (Model.Messages != null && Model.Messages.Any())
						{
							if (Model.Messages.Count > 1)
							{
								<ul>
									@foreach (string message in Model.Messages)
									{
										<li>@Html.Raw(message)</li>
									}
								</ul>
							}
							else
							{
								<p>@Html.Raw(Model.Messages.First())</p>
							}
						}
					</div>
					@*<div class="modal-footer">
							<button type="button" class="btn btn-default" data-dismiss="modal">Schließen</button>
						</div>*@
				</div>
			</div>
		</div>
		<script>
			$(document).ready(function () {
				$('#modal').modal('toggle');
				$('#modal').on('hidden.bs.modal', function (e) {
					$('#modal-wrapper').remove();
				});
			});
		</script>
	}
</div>