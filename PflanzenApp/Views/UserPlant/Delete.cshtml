@model GardifyModels.Models.UserPlantViewModels.UserPlantDeleteViewModel

@{
    ViewBag.Title = "Pflanze Löschen";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Pflanze Löschen</h2>

<h3>Sind Sie sicher, dass Sie @Model.Name löschen möchten?</h3>
<div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Löschen" class="btn btn-default" /> |
            @Html.ActionLink("Zurück zur Pflanzenübersicht", "Index")
        </div>
    }
</div>
