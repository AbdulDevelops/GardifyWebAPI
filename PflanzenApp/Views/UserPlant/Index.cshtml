@model GardifyModels.Models.UserPlantViewModels.UserPlantIndexViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Alle Eigenen Pflanzen</h2>

<table class="table">
    <tr>
        <th></th>
        <th>
            Name
        </th>
        <th>
        <th></th>
    </tr>

    @foreach (var item in Model.UserPlants)
    {
        <tr>
            <td align="center">
                @*@if (item.UserPlant.Image != null)
                {
                    <img src="~/Images/UserImages/Plants/@item.UserPlant.Image" style="width:150px;" />
                }*@
            </td>
            <td>
                @Html.ActionLink(item.CustomName, "Details", "UserPlant", new { id = item.Id }, null)
            </td>
            <td>
                @Html.ActionLink("Bearbeiten", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details ansehen", "Details", new { id = item.Id })
            </td>
        </tr>
    }

</table>
<hr />
<p>
    @Html.ActionLink("Zurück zum Garten", "Index", "Garden") | 
	@Html.ActionLink("Nach neuen Pflanzen suchen", "Index", "PlantSearch")
</p>
